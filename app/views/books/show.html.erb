<div>
  <%= flash[:notice] %>
</div>

<%= render 'list', user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

  <tbody>
    <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <br><%= link_to @book.user.name, user_path(@book.user) %>
      </td>
      <td><%= link_to @book.title, book_path %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
      <td>
        <div class="row">
          <div class="col-6">
            <%= link_to 'Edit', edit_book_path(@book), class: 'btn btn-success text-white' %>
          </div>
        </div>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(@book), method: :delete, class: 'btn btn-danger text-white', data: { confirm: '本当に消しますか？' } %>
      </td>
      <% end %>
    </tr>
  </tbody>
  </table>
  </div>
  </div>
</div>
