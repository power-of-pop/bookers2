# ログイン後の表示画面
<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

  <% @book.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show',book_path(book.id) %>
        <%= link_to 'Edit',edit_book_path(book) %>
        <%= link_to 'Destroy',destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  <% end %>
  </table>

