<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %>
      <table class='table'>
      <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      </tbody>
    </table>

    <div class="row">
      <div class="col-10">
          <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
      </div>
    </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
        <th>Title</th><br>
        <%= f.text_field :title %>
        
        <th>Opinion</th>
        <%= f.text_area :body %>
        
        <div class="row">
          <div class="col-6">
            <%= f.submit 'Create Book', class: 'btn btn-success text-white' %>
          </div>
        </div>
      <% end %>
    </div>