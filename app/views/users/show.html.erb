<h1>User info</h1>

<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
	
  <h4><%= f.submit 'Create Book' %></h4>
<% end %>

<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Opinion</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
  </tr>
<% end %>
</table>
