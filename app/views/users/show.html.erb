<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      ユーザーの写真
    <tbody><tr></tr>
    <tr>
      <th>name</th>
      <th>testユーザーの名前</th>
    </tr>
    <tr>
      <th>introduction</th>
      <th>ユーザーのイントロダクション</th>
    </tr>
    </tbody>

    <div class="row">編集のボタン</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
        <th>Title</th><br>
        <%= f.text_field :title %>
        
        <th>Opinion</th>
        <%= f.text_area :body %>
        
        <h4><%= f.submit 'Create Book' %></h4>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>ユーザーの写真</td>
      <td><%= link_to book.title, edit_book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
